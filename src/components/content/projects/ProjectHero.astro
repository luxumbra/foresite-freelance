---
import { Picture } from "astro:assets";
import { Image } from "astro:assets";

const { title, image } = Astro.props;
---

<section
  class="project-hero relative flex flex-col items-center justify-center w-screen -translate-x-9 md:-translate-x-48 lg:-translate-x-20 h-[75vh] bg-cover bg-center shadow-lg overflow-hidden"
>
  <div class="absolute inset-0 bg-black opacity-20 z-10"></div>
  {
    image ? (
      <Picture
        src={image}
        formats={["avif", "webp"]}
        alt={title}
        loading="lazy"
      />
    ) : null
  }

  <div
    class="absolute inset-0 flex items-center justify-center z-10 text-center text-white"
  >
    <div
      class="bg-black bg-opacity-70 p-4 rounded-lg shadow-[0_0_80px_-6px] shadow-purple-500"
    >
      <h1 class="text-3xl font-bold">{title}</h1>
    </div>
  </div>
</section>
