---
import { Image } from "astro:assets";

const { title, image } = Astro.props;
---

<section
  class="relative flex flex-col items-center justify-center w-screen -translate-x-20 h-[66vh] bg-cover bg-center shadow-lg"
>
  <div class="absolute inset-0 bg-black opacity-20 z-10"></div>
  {
    image ? (
      <Image src={image} alt={title} class="w-full h-full object-cover z-0" />
    ) : null
  }

  <div
    class="absolute inset-0 flex items-center justify-center z-10 text-center text-white"
  >
    <div
      class="bg-black bg-opacity-70 p-4 rounded-lg shadow-[0_0_80px_-6px] shadow-purple-500"
    >
      <h1 class="text-3xl font-bold">{title}</h1>
    </div>
  </div>
</section>
