---
import Icon from "./Icon.astro";

const technologies = [
  { name: "css3", label: "CSS3" },
  { name: "html5", label: "HTML5" },
  { name: "javascript", label: "JavaScript" },
  {
    label: "TypeScript",
    name: "typescript",
  },
  {
    label: "React",
    name: "react",
  },
  {
    label: "Astro",
    name: "astro",
  },
  { name: "nextjs", label: "Next.js" },
  {
    label: "Wordpress",
    name: "wordpress",
  },
  {
    label: "PHP",
    name: "php",
  },
  {
    label: "TailwindCSS",
    name: "tailwindcss",
  },
  {
    label: "ChakraUI",
    name: "chakraui",
  },
  { name: "supabase", label: "Supabase" },
  {
    label: "Blockchain",
    name: "blockchain",
  },
  { name: "api", label: "APIs" },
  { name: "git", label: "Git" },
  { name: "bash", label: "Bash" },
  { name: "graphic-design", label: "Graphic Design" },
  {
    label: "Figma",
    name: "figma",
  },
];
---

<div class="relative overflow-x-hidden py-8">
  <div
    class="pointer-events-none absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-[var(--background)] to-transparent z-20"
  >
  </div>
  <div
    class="pointer-events-none absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-[var(--background)] to-transparent z-20"
  >
  </div>

  <div class="flex animate-scroll hover:animate-paused gap-12 md:gap-20 w-max">
    {
      [...technologies, ...technologies, ...technologies].map((tech) => (
        <div class="flex items-center justify-start gap-2 group transition-all duration-300">
          <Icon
            name={tech.name}
            wrapperClass="object-cover transition-transform group-hover:scale-110 opacity-60 flex-shrink"
            svgClass="h-auto w-8 fill-slate-400"
          />
          <span class="text-lg font-medium text-[var(--white-icon)]">
            {tech.label}
          </span>
        </div>
      ))
    }
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 50s;
    }
  }
</style>
