---
import Nav from "@/components/Nav.astro";
import Layout from "@/layouts/Layout.astro";

import { projects } from "@/data/projects";
import type { Project } from "@/data/projects";
import ProjectHero from "@/components/content/projects/ProjectHero.astro";
import Footer from "@/components/Footer.astro";

export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props as { project: Project };
---

<Layout title="Dave Sayer, Projects">
  <Nav />
  <section class="text-[var(--white)] mt-12 md:mt-0" id="home">
    <ProjectHero title={project.title} image={project.image} />
    <div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14">
      <div class="text-left space-y-4">
        <h1 class="text-3xl font-bold mb-2">{project.title}</h1>
        <p class="text-zinc-400 mb-4">{project.role}</p>

        <div class="mb-6">
          <p class="text-lg leading-relaxed">{project.description}</p>
        </div>

        <div class="mb-6">
          <h2 class="text-xl font-semibold mb-2">Tech Stack</h2>
          <ul class="list-disc list-inside">
            {project.tech.map((tech) => <li>{tech}</li>)}
          </ul>
        </div>

        <div class="space-y-2">
          {
            project.github && (
              <p>
                <a
                  href={project.github}
                  target="_blank"
                  class="underline hover:text-blue-400"
                >
                  View on GitHub →
                </a>
              </p>
            )
          }
          {
            project.figma && (
              <p>
                <a
                  href={project.figma}
                  target="_blank"
                  class="underline hover:text-blue-400"
                >
                  View Figma Preview →
                </a>
              </p>
            )
          }
        </div>

        <div class="mt-8">
          <a href="/#projects" class="btn btn-outline">← Back to projects</a>
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>
