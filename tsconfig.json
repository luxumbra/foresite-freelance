{
  "compilerOptions": {
    "module": "ES2020",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["astro/client"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "~public/*": ["public/*"],
      "@data/*": ["src/data/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*",
    "astro.config.ts"
  ]
}